{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "strict": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "downlevelIteration": true,
    "rootDir": "src",
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationDir": "dist",
    "isolatedModules": true
  },
  "include": ["src"],
  "typedocOptions": {
    "entryPoints": ["src/index.ts"],
    "out": "docs"
  }
}
